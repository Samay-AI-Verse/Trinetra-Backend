# Example .env file for Trinetra Backend
# Copy this to .env and fill in your actual values

# MongoDB Connection
MONGO_DETAILS=mongodb+srv://<db_username>:<db_password>@mycluster.dktubhj.mongodb.net/?appName=MyCluster

# Cloudinary Configuration (Get from cloudinary.com/console)
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5500

# Twilio Configuration (Optional - for SMS OTP)
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here
TWILIO_FROM_NUMBER=+1234567890
